<% layout("layouts/boilerplate"); %>
<div class="row mt-3 mb-3 ">
    <h2 class="offset-md-3 col-12 col-sm-6 col-md-5 mt-3 mb-3">Login To Airbnb</h2> <br><br>
    <div class="offset-md-3  col-12 col-sm-6 col-md-5 formDesign mb-3">
       <form action="/login" class="needs-validation" method="POST" novalidate>
        <div class=" mb-3">
            <label for="username" class="form-label">UserName</label>
            <input type="text" name="username" id="username" class="form-control" required placeholder="Enter you UserName">
            <div class="invalid-feedback">
                Enter your Username!
            </div>
        </div>

       
        <div class=" mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" id="password" class="form-control" required placeholder="Enter Password">
            <div class="invalid-feedback">
                Enter your Username!
            </div>
        </div>

        <button class="btn  add-button">Login</button>
       </form>
    </div>
</div>